generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String              @id @default(cuid())
  email       String              @unique
  password    String
  createdAt   DateTime            @default(now())
  analyses    StockAnalysis[]
  portfolios  Portfolio[]
  watchlists  Watchlist[]
}

model StockAnalysis {
  id          String   @id @default(cuid())
  ticker      String
  summary     String
  dataJson    Json
  cached      Boolean  @default(false)
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id])
  watchlistId String?
  portfolioId String?

  @@index([userId, ticker, createdAt])
  @@index([watchlistId, createdAt])
  @@index([portfolioId, createdAt])
}

model Ticker {
  id        String   @id @default(cuid())
  symbol    String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prices DailyPrice[]
}

model DailyPrice {
  id     String   @id @default(cuid())
  symbol String
  date   DateTime
  open   Float?
  high   Float?
  low    Float?
  close  Float
  volume BigInt?

  createdAt DateTime @default(now())
  ticker    Ticker   @relation(fields: [symbol], references: [symbol], onDelete: Cascade)

  @@unique([symbol, date])
  @@index([symbol, date])
}

model Portfolio {
  id        String             @id @default(cuid())
  name      String
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  userId    String
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions PortfolioTransaction[]

  @@index([userId, createdAt])
}

model PortfolioTransaction {
  id          String     @id @default(cuid())
  type        PortfolioTransactionType @default(BUY)
  symbol      String
  quantity    Float
  price       Float
  notes       String?
  executedAt  DateTime   @default(now())
  createdAt   DateTime   @default(now())

  portfolioId String
  portfolio   Portfolio  @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@index([portfolioId, executedAt])
  @@index([symbol])
}

enum PortfolioTransactionType {
  BUY
  SELL
}

model Watchlist {
  id        String          @id @default(cuid())
  name      String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  userId    String
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  items     WatchlistItem[]

  @@index([userId, createdAt])
}

model WatchlistItem {
  id          String     @id @default(cuid())
  symbol      String
  notes       String?
  createdAt   DateTime   @default(now())

  watchlistId String
  watchlist   Watchlist  @relation(fields: [watchlistId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, symbol])
  @@index([symbol])
}
